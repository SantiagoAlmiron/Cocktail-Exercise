<div class="row justify-content-center">
  <div class="card" style="width: 18rem;">
    <%= cl_image_tag @cocktail.photo.key, height: 286, width: 180, crop: :fill %>
    <div class="card-body">
      <h5 class="card-title"><%= @cocktail.name %></h5>
      <p class="card-text">
      <% @cocktail.ingredients.each do |ingredient| %>
        <div class="p-3">
          <li class="list-group-item">
          <p><%= Dose.find_by_ingredient_id(ingredient.id).description %></p>
          <h3><strong><%= ingredient.name  %></strong></h3>
          <%= link_to  "Delete", dose_path(Dose.find_by_ingredient_id(ingredient.id)), method: :delete %></strong>
          </li>
        </div>
      <% end %>
      </p>
      <div class="d-flex justify-content-center py-3"><%= link_to  "Add a new ingredient", new_cocktail_dose_path(@cocktail) %></div>
      <div class="d-flex justify-content-center py-3"><%= link_to  "Back To Menu", cocktails_path %></div>
    </div>
  </div>
</div>

