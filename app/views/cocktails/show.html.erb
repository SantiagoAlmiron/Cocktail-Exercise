<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="row justify-content-center">
  <ul class="list-group">
    <% @cocktail.ingredients.each do |ingredient| %>
      <li class="list-group-item">
      <p><%= Dose.find_by_ingredient_id(ingredient.id).description %></p>
      <h3><strong><%= ingredient.name  %></strong></h3>
      </li>
    <% end %>
  </ul>
</div>
<div class="d-flex justify-content-center py-3"><%= link_to  "Add a new ingredient", new_cocktail_dose_path(@cocktail) %></div>
