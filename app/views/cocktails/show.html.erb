<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="row justify-content-center">
  <ul class="list-group">
    <% @cocktail.ingredients.each do |ingredient| %>
    <div class="p-3">
      <li class="list-group-item">
      <p><%= Dose.find_by_ingredient_id(ingredient.id).description %></p>
      <h3><strong><%= ingredient.name  %></strong></h3>
      <strong><%= link_to  "Delete", dose_path(Dose.find_by_ingredient_id(ingredient.id)), method: :delete %></strong>
      </li>
    </div>
    <% end %>
  </ul>
</div>
<div class="d-flex justify-content-center py-3"><%= link_to  "Add a new ingredient", new_cocktail_dose_path(@cocktail) %></div>
<div class="d-flex justify-content-center py-3"><%= link_to  "Back To Menu", cocktails_path %></div>
